{
    "files.exclude": {
        ".vscode": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "env": true,
        "*.code-workspace": true,
        ".flaskenv": true,
        "requirements.txt": true,
        ".gitignore": true,
        ".pylintrc": true
    }
    ,"python.linting.pycodestyleEnabled": true
    ,"python.linting.pycodestyleArgs": ["--max-line-length=160"]
    ,"python.linting.pylintEnabled": true
    ,"python.linting.pylintArgs": [
        "--load-plugins",
        "pylint-flask"
    ],
}